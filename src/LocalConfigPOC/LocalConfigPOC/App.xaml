<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalConfigPOC.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="SeparatorLight">#DEDEE0</Color>
            <Color x:Key="SeparatorDark">#323234</Color>
            <Style x:Key="GridReset" TargetType="Grid">
                <Setter Property="Padding" Value="0" />
                <Setter Property="ColumnSpacing" Value="0" />
                <Setter Property="RowSpacing" Value="0" />
            </Style>
            <Style x:Key="SeperatorView" TargetType="BoxView">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource SeparatorDark}, Light={StaticResource SeparatorLight}}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>